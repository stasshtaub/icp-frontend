        ul.capabilities-program__slides.swiper-wrapper
            each slide, i in slides
                li(class=`capabilities-program__slide--${i+1}`).capabilities-program__slide.swiper-slide
                    if (i === 0)
                        .capabilities-program__path
                            include ../../../../images/svg/capabilities-program-path.svg
                    p.capabilities-program__number= i+1
                    .capabilities-program__content
                        .capabilities-program__module
                            p.capabilities-program__module-text Модуль
                            h4.capabilities-program__module-title= slide.title
                        .capabilities-program__description
                            .capabilities-program__description-block
                                p.capabilities-program__description-title Что будет
                                ul.capabilities-program__description-list
                                    each topic in slide.topics
                                        li.capabilities-program__description-item= topic
                            .capabilities-program__description-block.capabilities-program__description-block--results
                                p.capabilities-program__description-title Результат после прохождения модуля
                                ul.capabilities-program__description-list
                                    each result in slide.results
                                        li.capabilities-program__description-item= result
                            a(href="#")
                                p.capabilities-program__description-title.capabilities-program__description-title--link Расписание

