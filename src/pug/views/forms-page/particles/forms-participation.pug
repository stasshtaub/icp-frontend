include ../../../mixins/modal
include ../../../mixins/form-item
include ../../../mixins/checkbox
include ../../../mixins/loader

+modal("Заявка на участие")#modal-participation
    .forms-participation
        .forms-participation__col.forms-participation__col--left
        .forms-participation__col.forms-participation__col--right
            form(action="https://jsonplaceholder.typicode.com/posts" method="POST").form.forms-participation__form#forms-participation
                +form-item("Как вас зовут?")
                    input(name="name" placeholder="Фамилия и имя" required).forms-participation__input
                +form-item("Эл. почта")
                    input(name="email" placeholder="E-mail" type="email" required).forms-participation__input
                +form-item("Номер телефона")
                    input(name="phone" placeholder="+7" type="tel" pattern="\\+7-[0-9]{3}-\\d{3}-\\d{2}-?\\d{2}" required).forms-participation__input
                +checkbox("consent").forms-participation__consent Даю согласие на обработку персональных данных
                +button("Отправить")(type="submit" disabled).forms-participation__submit-btn
            +loader()
