include ../../../mixins/form-item
include ../../../mixins/checkbox
include ../../../mixins/loader

.loyalty-program-registration
    .container
        .loyalty-program-registration__card
            .loyalty-program-registration__col.loyalty-program-registration__col--left
                h2.text.text--l2.text--bold Зарегистрируйтесь как партнёр и получите бонус*
                .loyalty-program-registration__description
                    p.text.text--s Получите скидку 3000 рублей на оплату интересующего курса, а также возможность делиться скидками с вашими родными, друзьями, коллегамии подписчиками.
                p.loyalty-program-registration__footnote.text.text--xs3 Вам не нужно повторно проходить регистрацию, если вы уже в статусе нашего партнёра. При повторной регистрации полученная скидка в дальнейшем не учитывается.
            .loyalty-program-registration__col.loyalty-program-registration__col--right
                form(action="https://jsonplaceholder.typicode.com/posts" method="POST").form.loyalty-program-registration__form#loyalty-program-registration__form
                    +form-item("Как вас зовут?", true)
                        input(name="lname" placeholder="Фамилия" required).form__input
                        input(name="fname" placeholder="Имя" required).form__input
                    +form-item("Эл. почта")
                        input(name="email" placeholder="E-mail" type="email" required).form__input
                    +form-item("Телефон")
                        input(name="phone" placeholder="+7" type="tel" pattern="\\+7-[0-9]{3}-\\d{3}-\\d{2}-?\\d{2}" required).form__input
                    +checkbox("consent").loyalty-program-registration__consent
                        span.text.text--xs3 Я даю согласие на обработку персональных данных
                    +button("Стать партнером")(type="submit" disabled).loyalty-program-registration__submit-btn
            +loader()